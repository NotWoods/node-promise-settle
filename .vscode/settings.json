{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": {
            "when": "$(basename)"
        },
        "**/*.d.ts": {
            "when": "$(basename).ts"
        }
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/lib": true,
        "**/coverge": true,
        "package-lock.json": true
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.referencesCodeLens.enabled": true,
    "editor.formatOnSave": true
}
